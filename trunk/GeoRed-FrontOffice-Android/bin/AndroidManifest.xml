<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.geored.frontoffice"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"/>
    
    <application android:label="@string/app_name"
        android:icon="@drawable/georeduy_v1"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                
            </intent-filter>
        </activity>
        
        <activity
            android:name=".activities.RegistroActivity"
            android:label="@string/title_activity_registro">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        
		<activity
            android:name=".activities.MenuActivity"
            android:label="@string/title_activity_menu">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        
	    <activity android:name=".activities.ContactosActivity"
	              android:label="@string/app_name" 
	              android:theme="@android:style/Theme.NoTitleBar">
	    </activity>
	
	    <activity android:name=".activities.SitioActivity"
	              android:label="@string/app_name" 
	              android:theme="@android:style/Theme.NoTitleBar">
	    </activity>
	
	    <activity android:name=".activities.NotificacionesActivity"
	              android:label="@string/app_name" 
	              android:theme="@android:style/Theme.NoTitleBar">
	    </activity>
	
	    <activity android:name=".activities.PerfilActivity"
	              android:label="@string/app_name" 
	              android:theme="@android:style/Theme.NoTitleBar">
	    </activity> 
	    
	    <activity android:name=".activities.ChatActivity"
	              android:label="@string/app_name" 
	              android:theme="@android:style/Theme.NoTitleBar">
	    </activity>        
    </application>

</manifest>
